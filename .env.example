# LOTR Data Cloud POC - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# LOTR API Configuration
# Get your API key at: https://the-one-api.dev/sign-up
LOTR_API_KEY=your_lotr_api_key_here

# Salesforce Data Cloud OAuth Configuration
# Create a Connected App in Salesforce with OAuth Client Credentials flow
DATA_CLOUD_CLIENT_ID=your_client_id_here
DATA_CLOUD_CLIENT_SECRET=your_client_secret_here
DATA_CLOUD_AUTH_URL=https://login.salesforce.com
# Or use: https://test.salesforce.com for sandboxes

# Data Cloud Ingestion API Configuration
# This is your Data Cloud instance URL (e.g., https://yourorg.c360a.salesforce.com)
# You'll get this from the token exchange response
DATA_CLOUD_INGESTION_URL=https://yourorg.c360a.salesforce.com

# Data Cloud Source and Object Names
# These should match your Data Stream configuration in Data Cloud
DATA_CLOUD_SOURCE_NAME=lotr
DATA_CLOUD_OBJECT_NAME=LotrCharacter
DATA_CLOUD_QUOTE_SOURCE_NAME=lotr
DATA_CLOUD_QUOTE_OBJECT_NAME=LotrQuote

# Optional: Cache and Batch Settings
CACHE_MAX_AGE_HOURS=24
BATCH_SIZE=200
DELETE_BATCH_SIZE=200
MAX_CHARACTERS=10000
